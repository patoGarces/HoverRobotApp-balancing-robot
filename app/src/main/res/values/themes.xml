<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HoverRobot" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.HoverRobot" parent="Base.Theme.HoverRobot" />

    <!--    Estilos textview de statusData Fragment-->
    <style name="styleTvStatusData" parent="Widget.AppCompat.TextView">
        <item name="android:height">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/background_btn_status</item>
    </style>

    <!--    Estilos textview de statusBar Fragment-->
    <style name="styleTvStatusBar" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#FFFFFFFF</item>
    </style>

    <!--    Estilo sliders de configuracion-->
    <style name="styleSliderPid" parent="Widget.MaterialComponents.Slider">
        <item name="android:layout_marginHorizontal">16dp</item>
        <!--        <item name="android:progressTint">@color/blue_80_percent</item>-->
        <!--        <item name="android:progressBackgroundTint">@color/gray_80_percent</item>-->
    </style>


    <!--    Estilos textview general-->
    <style name="style_text_14sp_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#FFFFFFFF</item>
    </style>

    <!--    Estilos textview general-->
    <style name="style_text_14sp" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">#FFFFFFFF</item>
    </style>
</resources>