<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.analisisFragment.AnalisisFragment"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    >

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menu_chart"
            app:layout_constraintBottom_toTopOf="@id/pid_params"
            >
        </com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:id="@+id/pid_params"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/chart"
            app:layout_constraintEnd_toEndOf="@id/chart"
            app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_param_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    tools:text="center: 3.0"
                    />
                <TextView
                    android:id="@+id/tv_angle_pitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    tools:text="Pitch: 3.0"
                    />
                <TextView
                    android:id="@+id/tv_angle_roll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    tools:text="Roll: 3.0"
                    />
                <TextView
                    android:id="@+id/tv_angle_yaw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    tools:text="Yaw: 3.0"
                    />
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    tools:text="Dist: 0.22mts"
                    />
        </LinearLayout>

        <ScrollView
            android:id="@+id/menu_chart"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_play_pause"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/background_btn_status"
                            android:textAppearance="@style/style_text_14sp"
                            android:layout_margin="2dp"
                            android:padding="0dp"
                            android:textSize="11sp"
                            android:text="@string/btn_pause_title"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraint_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_settings_group"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >

                                <TextView
                                    android:id="@+id/dataset_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:textAppearance="@style/style_text_14sp_bold"
                                    android:text="@string/dataset_title"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <RadioGroup
                                    android:id="@+id/rg_dataset_select"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:checkedButton="@id/rb_dataset_imu"
                                    app:layout_constraintTop_toBottomOf="@id/dataset_title"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    >

                                        <RadioButton
                                            android:id="@+id/rb_dataset_imu"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:buttonTint="@color/red_80_percent"
                                            android:textAppearance="@style/style_text_14sp"
                                            android:text="@string/dataset_imu_data"
                                            />

                                        <RadioButton
                                            android:id="@+id/rb_dataset_motor"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:buttonTint="@color/red_80_percent"
                                            android:textAppearance="@style/style_text_14sp"
                                            android:text="@string/dataset_motor_output"
                                            />

                                        <RadioButton
                                            android:id="@+id/rb_dataset_pid_angle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:buttonTint="@color/red_80_percent"
                                            android:textAppearance="@style/style_text_14sp"
                                            android:text="@string/dataset_pid_angle"
                                            />

                                        <RadioButton
                                            android:id="@+id/rb_dataset_pid_pos"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:buttonTint="@color/red_80_percent"
                                            android:textAppearance="@style/style_text_14sp"
                                            android:text="@string/dataset_pid_pos"
                                            />

                                        <RadioButton
                                            android:id="@+id/rb_dataset_pid_yaw"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:buttonTint="@color/red_80_percent"
                                            android:textAppearance="@style/style_text_14sp"
                                            android:text="@string/dataset_pid_yaw"
                                            />
                                </RadioGroup>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_settings_group"
                            >
                                <TextView
                                    android:id="@+id/autoscale_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:textAppearance="@style/style_text_14sp_bold"
                                    android:text="@string/config_title"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch_autoscale"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="@string/switch_text_title"
                                    android:textAppearance="@style/style_text_14sp_bold"
                                    android:colorControlActivated="@color/red_80_percent"
                                    app:thumbTint="@color/status_red"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/autoscale_title"
                                    />

                                <Button
                                    android:id="@+id/btn_clear_data"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:padding="8dp"
                                    android:backgroundTint="@color/red_80_percent"
                                    android:textSize="11sp"
                                    android:text="@string/btn_clear_title"
                                    android:textAppearance="@style/style_text_14sp_bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/switch_autoscale"
                                    />

                                <Button
                                    android:id="@+id/btn_generate_dataset"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:padding="8dp"
                                    android:backgroundTint="@color/red_80_percent"
                                    android:textSize="11sp"
                                    android:text="@string/btn_random_title"
                                    android:textAppearance="@style/style_text_14sp_bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/btn_clear_data"
                                    />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>