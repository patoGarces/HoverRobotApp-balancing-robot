<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ui.navigationFragment.NavigationFragment">

    <com.github.mikephil.charting.charts.ScatterChart
        android:id="@+id/scatterChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_backward"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/control_move_placeholder_backward"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        android:background="@drawable/background_btn_status"
        app:layout_constraintStart_toStartOf="@+id/frame_backward"
        app:layout_constraintBottom_toTopOf="@id/frame_backward"
        tools:text="0.1mts backward"
        />

    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:id="@+id/seekbar_left"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:progressColor="@color/red"
        app:progressWidth="2dp"
        app:thumb="@drawable/seek_bar_thumb"
        app:layout_constraintTop_toTopOf="@id/joystick_throttle"
        app:layout_constraintBottom_toBottomOf="@id/joystick_throttle"
        app:layout_constraintStart_toStartOf="@id/joystick_throttle"
        app:layout_constraintEnd_toEndOf="@id/joystick_throttle"/>

    <FrameLayout
        android:id="@+id/frame_backward"
        android:layout_width="48dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_backward"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:value="50"
            android:valueFrom="0.1"
            android:valueTo="100"
            style="@style/styleSlider"
            app:trackHeight="5dp"
            app:thumbHeight="14dp"
            app:progressColor="@color/red"
            app:labelBehavior="gone"
            app:thumb="@drawable/seek_bar_thumb"/>
    </FrameLayout>

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystick_throttle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:elevation="1dp"
        app:JV_buttonSizeRatio="40%"
        app:JV_backgroundSizeRatio="60%"
        app:JV_buttonImage="@mipmap/ic_analog_foreground"
        app:JV_borderColor="@color/white"
        app:JV_backgroundColor="@color/transparent"
        app:JV_borderWidth="2dp"
        app:JV_buttonDirection="vertical"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        app:layout_constraintStart_toEndOf="@id/frame_backward"
        app:JV_fixedCenter="false"/>

    <Button
        android:id="@+id/btn_forward"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/control_move_placeholder_forward"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        android:background="@drawable/background_btn_status"
        app:layout_constraintEnd_toEndOf="@id/frame_forward"
        app:layout_constraintBottom_toTopOf="@id/frame_forward"
        tools:text="0.1mts forward"
        />

    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:id="@+id/seekbar_right"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:progressColor="@color/red"
        app:progressWidth="2dp"
        app:thumb="@drawable/seek_bar_thumb"
        app:layout_constraintTop_toTopOf="@id/joystick_direction"
        app:layout_constraintBottom_toBottomOf="@id/joystick_direction"
        app:layout_constraintStart_toStartOf="@id/joystick_direction"
        app:layout_constraintEnd_toEndOf="@id/joystick_direction"/>

    <FrameLayout
        android:id="@+id/frame_forward"
        android:layout_width="48dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_forward"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:value="50"
            android:valueFrom="0.1"
            android:valueTo="100"
            style="@style/styleSlider"
            app:trackHeight="5dp"
            app:thumbHeight="14dp"
            app:progressColor="@color/red"
            app:labelBehavior="gone"
            app:thumb="@drawable/seek_bar_thumb"/>
    </FrameLayout>

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystick_direction"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        app:JV_buttonSizeRatio="40%"
        app:JV_backgroundSizeRatio="60%"
        app:JV_buttonImage="@mipmap/ic_analog_foreground"
        app:JV_borderColor="@color/white"
        app:JV_backgroundColor="@color/transparent"
        app:JV_borderWidth="2dp"
        app:JV_buttonDirection="horizontal"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        app:layout_constraintEnd_toStartOf="@id/frame_forward"
        app:JV_fixedCenter="false"/>

    <com.redinput.compassview.CompassView
        android:id="@+id/compass_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/transparent"
        app:showMarker="true"
        app:markerColor="@color/red_80_percent"
        app:lineColor="@color/white"
        app:textColor="@color/white"
        app:textSize="12sp"
        app:rangeDegrees="50.0"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_yaw_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="32dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toEndOf="@id/joystick_throttle"
        app:layout_constraintEnd_toStartOf="@id/btn_yaw_right"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_yaw_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="32dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toEndOf="@id/btn_yaw_left"
        app:layout_constraintEnd_toStartOf="@id/joystick_direction"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/navigation_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn_backward,btn_forward,joystick_direction,joystick_throttle,seekbar_left,seekbar_right,btn_yaw_left,btn_yaw_right,frame_backward,frame_forward"
        />

</androidx.constraintlayout.widget.ConstraintLayout>