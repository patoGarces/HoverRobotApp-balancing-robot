<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".ui.navigationFragment.NavigationFragment">

    <com.github.mikephil.charting.charts.ScatterChart
        android:id="@+id/scatterChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_backward"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/control_move_placeholder_backward"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        android:background="@drawable/background_btn_status"
        app:layout_constraintStart_toStartOf="@+id/frame_backward"
        app:layout_constraintBottom_toTopOf="@id/frame_backward"
        tools:text="0.1mts backward"
        />

    <FrameLayout
        android:id="@+id/frame_backward"
        android:layout_width="48dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_backward"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:value="50"
            android:valueFrom="0.1"
            android:valueTo="100"
            style="@style/styleSlider"
            app:trackHeight="5dp"
            app:thumbHeight="14dp"
            app:labelBehavior="gone"
            />
    </FrameLayout>

    <Button
        android:id="@+id/btn_forward"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/control_move_placeholder_forward"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        android:background="@drawable/background_btn_status"
        app:layout_constraintEnd_toEndOf="@id/frame_forward"
        app:layout_constraintBottom_toTopOf="@id/frame_forward"
        tools:text="0.1mts forward"
        />

    <FrameLayout
        android:id="@+id/frame_forward"
        android:layout_width="48dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_forward"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:rotation="270"
            android:value="50"
            android:valueFrom="0.1"
            android:valueTo="100"
            style="@style/styleSlider"
            app:trackHeight="5dp"
            app:thumbHeight="14dp"
            app:labelBehavior="gone"/>
    </FrameLayout>

    <com.redinput.compassview.CompassView
        android:id="@+id/compass_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/transparent"
        app:showMarker="true"
        app:markerColor="@color/red_80_percent"
        app:lineColor="@color/white"
        app:textColor="@color/white"
        app:textSize="12sp"
        app:rangeDegrees="50.0"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/compass_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/navigation_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn_backward,btn_forward,compose_view,compose_view,frame_backward,frame_forward"
        />

</androidx.constraintlayout.widget.ConstraintLayout>