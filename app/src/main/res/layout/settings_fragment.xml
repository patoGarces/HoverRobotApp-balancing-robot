<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_settings_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:id="@+id/tv_group_pid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_group_title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <Button
                    android:id="@+id/btn_get_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/pid_btn_get"
                    android:background="@drawable/background_btn_status"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_group_pid_title"
                    app:layout_constraintEnd_toStartOf="@id/btn_save_pid"
                    />

                <Button
                    android:id="@+id/btn_save_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/pid_btn_save"
                    android:background="@drawable/background_btn_status"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_group_pid_title"
                    app:layout_constraintEnd_toStartOf="@id/btn_sync_pid"
                    />

                <Button
                    android:id="@+id/btn_sync_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/pid_btn_sync"
                    android:background="@drawable/background_btn_status"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_group_pid_title"
                    app:layout_constraintEnd_toStartOf="@id/sp_bank_memory"
                    />

                <ProgressBar
                    android:id="@+id/pb_sync_loading"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/purple_80_percent"
                    app:layout_constraintStart_toStartOf="@id/btn_sync_pid"
                    app:layout_constraintEnd_toEndOf="@id/btn_sync_pid"
                    app:layout_constraintTop_toTopOf="@id/btn_sync_pid"
                    app:layout_constraintBottom_toBottomOf="@id/btn_sync_pid"
                    tools:visibility="gone"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_bank_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_group_pid_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_parameter_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_parameter_p_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_group_pid_title"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sb_pid_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/styleSliderPid"
                    android:valueFrom="0.00"
                    android:stepSize="0.01"
                    android:valueTo="5.00"
                    app:trackHeight="4dp"
                    app:thumbRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_value_p"
                    app:layout_constraintTop_toBottomOf="@id/tv_parameter_p"
                    />

                <TextView
                    android:id="@+id/tv_value_p"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_value_default"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/sb_pid_p"
                    app:layout_constraintBottom_toBottomOf="@id/sb_pid_p"
                    />

                <TextView
                    android:id="@+id/tv_parameter_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_parameter_i_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/sb_pid_p"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sb_pid_i"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/styleSliderPid"
                    android:valueFrom="0.00"
                    android:stepSize="0.01"
                    android:valueTo="2.00"
                    app:trackHeight="4dp"
                    app:thumbRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_value_i"
                    app:layout_constraintTop_toBottomOf="@id/tv_parameter_i"
                    />

                <TextView
                    android:id="@+id/tv_value_i"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_value_default"
                    android:textSize="16sp"
                    android:textAlignment="center"

                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/sb_pid_i"
                    app:layout_constraintBottom_toBottomOf="@id/sb_pid_i"
                    />

                <TextView
                    android:id="@+id/tv_parameter_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_parameter_d_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/sb_pid_i"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sb_pid_d"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/styleSliderPid"
                    android:valueFrom="0.00"
                    android:stepSize="0.01"
                    android:valueTo="8.00"
                    app:trackHeight="4dp"
                    app:thumbRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_value_d"
                    app:layout_constraintTop_toBottomOf="@id/tv_parameter_d"
                    />

                <TextView
                    android:id="@+id/tv_value_d"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_value_default"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/sb_pid_d"
                    app:layout_constraintBottom_toBottomOf="@id/sb_pid_d"
                    />

                <TextView
                    android:id="@+id/tv_parameter_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_parameter_center_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/sb_pid_d"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sb_center_angle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/styleSliderPid"
                    android:valueFrom="-10.00"
                    android:stepSize="0.01"
                    android:valueTo="10.00"
                    app:trackHeight="4dp"
                    app:thumbRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_value_center"
                    app:layout_constraintTop_toBottomOf="@id/tv_parameter_center"
                    />

                <TextView
                    android:id="@+id/tv_value_center"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_value_default"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/sb_center_angle"
                    app:layout_constraintBottom_toBottomOf="@id/sb_center_angle"
                    />

                <TextView
                    android:id="@+id/tv_front_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_center_front"
                    android:layout_marginTop="-8dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/sb_center_angle"
                    app:layout_constraintTop_toBottomOf="@id/sb_center_angle"
                    />

                <TextView
                    android:id="@+id/tv_back_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_center_back"
                    android:layout_marginTop="-8dp"
                    android:layout_marginStart="16dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/sb_center_angle"
                    app:layout_constraintTop_toBottomOf="@id/sb_center_angle"
                    />

                <TextView
                    android:id="@+id/tv_parameter_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_parameter_limits_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_back_title"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sb_safety_limits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/styleSliderPid"
                    android:valueFrom="10.00"
                    android:stepSize="0.01"
                    android:valueTo="65.00"
                    android:value="30.00"
                    app:trackHeight="4dp"
                    app:thumbRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_value_limits"
                    app:layout_constraintTop_toBottomOf="@id/tv_parameter_limit"
                    />

                <TextView
                    android:id="@+id/tv_value_limits"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pid_value_default"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/sb_safety_limits"
                    app:layout_constraintBottom_toBottomOf="@id/sb_safety_limits"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_settings_group"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:id="@+id/tv_group_imu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imu_group_title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <Button
                    android:id="@+id/btn_calibrate_imu"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/imu_btn_calibrate"
                    android:background="@drawable/background_btn_status"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_group_imu_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <ProgressBar
                    android:id="@+id/pb_calibrate_loading"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/purple_80_percent"
                    app:layout_constraintStart_toStartOf="@id/btn_calibrate_imu"
                    app:layout_constraintEnd_toEndOf="@id/btn_calibrate_imu"
                    app:layout_constraintTop_toTopOf="@id/btn_calibrate_imu"
                    app:layout_constraintBottom_toBottomOf="@id/btn_calibrate_imu"
                    tools:visibility="gone"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>